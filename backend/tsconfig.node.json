{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../dist",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "../node_modules/tiktoken/encoders/*.json"
  ],
  "exclude": ["node_modules", "dist"]
} 